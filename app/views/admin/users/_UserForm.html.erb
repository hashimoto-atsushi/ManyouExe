<%= form_with model:[:admin,@user], local: true do |form| %>
<div>
  <% if @user.errors.any? %>
    <P><% pluralize(@user.errors.count, 'error') %> prohibited this <%= @user.name %> from being saved: </P>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div>
  <div class='input-group'>
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control' %>
  </div>
  <div class='input-group'>
    <%= form.label :email %>
    <%= form.email_field :email, class:'form-control' %>
  </div>
  <div class='input-group'>
    <%= form.label :password %>
    <%= form.password_field :password, class:'form-control'  %>
  </div>
  <div class='input-group'>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:'form-control'  %>
  </div>
  <% if current_user&.admin %>
  <div class="input-group">
    <%= form.label :admin %>
    <%= form.select :admin, {"true": "ture", "false": "false"}, {include_blank: false}, class:"form-control" %>
  </div>
  <% end %>
  <div class='margin-top'>
    <%= form.submit class:'btn'%>
  </div>
</div>
<div class='margin-top'>
  <%= link_to "ユーザー一覧へ", admin_users_path, class: 'btn-primary badge' %>
</div>
<% end %>
