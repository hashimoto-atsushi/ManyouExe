<h1 class="jumbotron">ユーザー管理画面</h1>
<table class="table table-bordered table-striped table-hover">
<thead>
  <tr>
    <th><%= t('view.user_name')%></th>
    <th><%= t('view.user_email')%></th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: {confirm: "削除" + t("view.mind") }, class:"btn-danger badge" %></td>
    <td><%= link_to "編集", edit_admin_user_path(user.id), data: {confirm: "編集" + t("view.mind") }, class:"btn-warning badge" %></td>
    <td><%= link_to "詳細", admin_user_path(user.id), class:"btn-info badge" %></td>
  </tr>
  <% end %>
</tbody>
</table>

<%= link_to '新規ユーザー登録へ', new_admin_user_path, class: "btn-primary badge"%>
